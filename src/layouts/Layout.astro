---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Cybersecurity engineer portfolio and blog" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700&display=swap">
  </head>
  <body class="bg-background text-text-primary font-mono min-h-screen">
    <header class="border-b border-border p-4">
      <nav class="container mx-auto flex justify-between items-center">
        <a href="/" class="text-primary hover:text-primary-hover transition-colors font-semibold">Titouan Heyrendt</a>
        <div class="space-x-6 flex items-center">
          <a href="/" class="text-text-secondary hover:text-primary transition-colors">Home</a>
          <a href="/blog" class="text-text-secondary hover:text-primary transition-colors">Blog</a>
          <a href="/projets" class="text-text-secondary hover:text-primary transition-colors">Projects</a>
        </div>
      </nav>
    </header>
    <main class="container mx-auto p-4 animate-fade-in">
      <slot />
    </main>
    <footer class="border-t border-border p-4 mt-8">
      <div class="container mx-auto text-center text-sm text-text-muted">
        <p>Â© 2024 Titouan Heyrendt - Cybersecurity Engineer</p>
      </div>
    </footer>
  </body>
</html>
