---
import AuthStatus from '../components/AuthStatus.jsx';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Cybersecurity engineer portfolio and blog" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700&display=swap">
  </head>
  <body class="bg-terminal-black text-gray-100 font-mono min-h-screen">
    <header class="border-b border-terminal-green p-4">
      <nav class="container mx-auto flex justify-between items-center">
        <a href="/" class="text-terminal-green hover:text-white transition-colors">$ cd /home</a>
        <div class="space-x-4 flex items-center">
          <a href="/" class="hover:text-terminal-green transition-colors">Home</a>
          <a href="/cv" class="hover:text-terminal-green transition-colors">CV</a>
          <a href="/blog" class="hover:text-terminal-green transition-colors">Blog</a>
          <a href="/projets" class="hover:text-terminal-green transition-colors">Projects</a>
          <a href="/games" class="hover:text-terminal-green transition-colors">Games</a>
          <AuthStatus client:load />
        </div>
      </nav>
    </header>
    <main class="container mx-auto p-4 animate-fade-in">
      <slot />
    </main>
    <footer class="border-t border-terminal-green p-4 mt-8">
      <div class="container mx-auto text-center text-sm">
      </div>
    </footer>
  </body>
</html> 