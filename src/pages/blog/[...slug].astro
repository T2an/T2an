---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<Layout title={`${post.data.title} | Blog`} description={post.data.description}>
  <article class="max-w-4xl mx-auto">
    <header class="mb-8">
      <h1 class="text-4xl font-bold mb-4 text-terminal-green">{post.data.title}</h1>
      <p class="text-gray-400 mb-4">{post.data.description}</p>
      <time datetime={new Date(post.data.pubDate).toISOString()} class="text-sm text-gray-500">
        {new Date(post.data.pubDate).toLocaleDateString('fr-FR', {
          year: 'numeric',
          month: 'long',
          day: 'numeric'
        })}
      </time>
    </header>
    
    <div class="prose prose-invert max-w-none">
      <Content />
    </div>
  </article>
</Layout> 