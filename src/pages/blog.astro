---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
---

<Layout title="Blog | Portfolio">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-4xl font-bold mb-12 text-heading">
      Technical Blog
    </h1>
    
    <div class="grid gap-6">
      {posts.map((post) => (
        <a href={`/blog/${post.slug}`} class="block group">
          <article class="border border-border rounded-lg p-6 hover:bg-surface-hover transition-colors cursor-pointer">
            <h2 class="text-2xl font-bold mb-3 text-primary group-hover:text-primary-hover transition-colors">
              {post.data.title}
            </h2>
            <p class="text-text-secondary mb-4 leading-relaxed">{post.data.description}</p>
            <div class="flex items-center text-sm text-text-muted">
              <time datetime={new Date(post.data.pubDate).toISOString()}>
                {new Date(post.data.pubDate).toLocaleDateString('fr-FR', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })}
              </time>
            </div>
          </article>
        </a>
      ))}
    </div>
  </div>
</Layout>
