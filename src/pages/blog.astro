---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
---

<Layout title="Blog | Portfolio">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-4xl font-bold mb-8 text-terminal-green">
      $ ls -la /blog
    </h1>
    
    <div class="grid gap-6">
      {posts.map((post) => (
        <a href={`/blog/${post.slug}`} class="block">
          <article class="border border-terminal-green rounded-lg p-6 hover:bg-terminal-gray transition-colors cursor-pointer">
            <h2 class="text-2xl font-bold mb-2 text-terminal-green hover:text-white transition-colors">
              {post.data.title}
            </h2>
            <p class="text-gray-400 mb-4">{post.data.description}</p>
            <div class="flex items-center text-sm text-gray-500">
              <time datetime={new Date(post.data.pubDate).toISOString()}>
                {new Date(post.data.pubDate).toLocaleDateString('fr-FR', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })}
              </time>
            </div>
          </article>
        </a>
      ))}
    </div>
  </div>
</Layout>
