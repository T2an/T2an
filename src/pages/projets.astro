---
import Layout from '../layouts/Layout.astro';

const projects = [
  {
    title: "Network Traffic Analyzer",
    description: "Real-time network packet capture and analysis tool, developed in Python with Scapy.",
    tags: ["Python", "Cybersecurity", "Networks"],
    link: "https://github.com/titouan-heyrendt/network-analyzer"
  },
  {
    title: "Intrusion Detection System",
    description: "Custom rule-based IDS for attack detection on Linux servers.",
    tags: ["Bash", "Linux", "Security"],
    link: "https://github.com/titouan-heyrendt/custom-ids"
  }
];
---

<Layout title="Projects | Portfolio">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-4xl font-bold mb-12 text-heading">
      Technical Projects
    </h1>
    
    <div class="grid gap-6">
      {projects.map((project) => (
        <article class="border border-border rounded-lg p-6 hover:bg-surface-hover transition-colors">
          <h2 class="text-2xl font-bold mb-3">
            <a href={project.link} target="_blank" rel="noopener noreferrer" class="text-primary hover:text-primary-hover transition-colors">
              {project.title}
            </a>
          </h2>
          <p class="text-text-secondary mb-4 leading-relaxed">{project.description}</p>
          <div class="flex flex-wrap gap-2">
            {project.tags.map((tag) => (
              <span class="px-3 py-1 bg-surface text-accent text-sm rounded-full font-medium">
                {tag}
              </span>
            ))}
          </div>
        </article>
      ))}
    </div>
  </div>
</Layout> 