---
import Layout from '../layouts/Layout.astro';

const projects = [
  {
    title: "Analyseur de Trafic Réseau",
    description: "Outil de capture et d'analyse de paquets réseau en temps réel, développé en Python avec Scapy.",
    tags: ["Python", "Cybersécurité", "Réseaux"],
    link: "https://github.com/titouan-heyrendt/network-analyzer"
  },
  {
    title: "Système de Détection d'Intrusion",
    description: "IDS basé sur des règles personnalisées pour la détection d'attaques sur des serveurs Linux.",
    tags: ["Bash", "Linux", "Sécurité"],
    link: "https://github.com/titouan-heyrendt/custom-ids"
  }
];
---

<Layout title="Projets | Portfolio">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-4xl font-bold mb-8 text-terminal-green">
      $ ls -la /projets
    </h1>
    
    <div class="grid gap-6">
      {projects.map((project) => (
        <article class="border border-terminal-green rounded-lg p-6 hover:bg-terminal-gray transition-colors">
          <h2 class="text-2xl font-bold mb-2">
            <a href={project.link} target="_blank" rel="noopener noreferrer" class="hover:text-terminal-green transition-colors">
              {project.title}
            </a>
          </h2>
          <p class="text-gray-400 mb-4">{project.description}</p>
          <div class="flex flex-wrap gap-2">
            {project.tags.map((tag) => (
              <span class="px-2 py-1 bg-terminal-gray text-terminal-green text-sm rounded">
                {tag}
              </span>
            ))}
          </div>
        </article>
      ))}
    </div>
  </div>
</Layout> 