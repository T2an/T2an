---
import Layout from '../layouts/Layout.astro';

const projects = [
  {
    title: "Network Traffic Analyzer",
    description: "Real-time network packet capture and analysis tool, developed in Python with Scapy.",
    tags: ["Python", "Cybersecurity", "Networks"],
    link: "https://github.com/titouan-heyrendt/network-analyzer"
  },
  {
    title: "Intrusion Detection System",
    description: "Custom rule-based IDS for attack detection on Linux servers.",
    tags: ["Bash", "Linux", "Security"],
    link: "https://github.com/titouan-heyrendt/custom-ids"
  }
];
---

<Layout title="Projects | Portfolio">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-4xl font-bold mb-8 text-terminal-green">
      $ ls -la /projects
    </h1>
    
    <div class="grid gap-6">
      {projects.map((project) => (
        <article class="border border-terminal-green rounded-lg p-6 hover:bg-terminal-gray transition-colors">
          <h2 class="text-2xl font-bold mb-2">
            <a href={project.link} target="_blank" rel="noopener noreferrer" class="hover:text-terminal-green transition-colors">
              {project.title}
            </a>
          </h2>
          <p class="text-gray-400 mb-4">{project.description}</p>
          <div class="flex flex-wrap gap-2">
            {project.tags.map((tag) => (
              <span class="px-2 py-1 bg-terminal-gray text-terminal-green text-sm rounded">
                {tag}
              </span>
            ))}
          </div>
        </article>
      ))}
    </div>
  </div>
</Layout> 